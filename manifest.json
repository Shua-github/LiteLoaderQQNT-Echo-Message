{
    "$schema": "./manifest_schema.json",
    "manifest_version": 4,
    "type": "extension",
    "name": "+1",
    "slug": "plugin_template",
    "description": "实现模拟手机QQ的聊天+1功能",
    "version": "0.1.0",
    "icon": "./icon.png",
    "thumb": "./icon.svg",
    "authors": [
        {
            "name": "LiteLoaderQQNT",
            "link": "https://github.com/LiteLoaderQQNT"
        }
    ],
    "platform": [
        "win32",
        "linux",
        "darwin"
    ],
    "injects": {
        "renderer": "./src/renderer.js",
        "main": "./src/main.js",
        "preload": "./src/preload.js"
    },
    "repository": {
        "repo": "LiteLoaderQQNT/Plugin-Template",
        "branch": "main",
        "release": {
            "tag": "0.1.0",
            "file": "Plugin-Template.zip"
        }
    }
}